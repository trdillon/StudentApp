<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="start"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".TermEditActivity"
    tools:showIn="@layout/activity_term_edit">

    <EditText
        android:id="@+id/term_edit_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:hint="@string/edit_title"
        android:autofillHints="@string/edit_title"
        android:inputType="textCapWords"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/term_edit_start"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_marginTop="16dp"
        android:hint="@string/date_start_hint"
        android:autofillHints="@string/date_start_hint"
        android:inputType="date"
        app:layout_constraintEnd_toStartOf="@+id/term_edit_start_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/term_edit_title" />

    <ImageButton
        android:id="@+id/term_edit_start_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:background="@drawable/ic_date"
        android:contentDescription="@string/date_picker"
        android:minWidth="@dimen/icon_size_40"
        android:minHeight="@dimen/icon_size_40"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/term_edit_title" />

    <EditText
        android:id="@+id/term_edit_end"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/date_end_hint"
        android:autofillHints="@string/date_end_hint"
        android:layout_margin="@dimen/text_margin"
        android:inputType="date"
        app:layout_constraintTop_toBottomOf="@+id/term_edit_start"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/term_edit_end_btn" />

    <ImageButton
        android:id="@+id/term_edit_end_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:background="@drawable/ic_date"
        android:contentDescription="@string/date_picker"
        android:minWidth="@dimen/icon_size_40"
        android:minHeight="@dimen/icon_size_40"
        android:scaleType="fitXY"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/term_edit_start_btn" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/text_margin"
        android:layout_marginEnd="@dimen/fab_margin"
        android:backgroundTint="@android:color/holo_blue_light"
        android:src="@drawable/ic_delete"
        app:backgroundTint="@android:color/background_light"
        app:borderWidth="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>